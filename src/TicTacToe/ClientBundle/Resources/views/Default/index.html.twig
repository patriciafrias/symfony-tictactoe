{% extends '::base.html.twig' %}

{% block body %}

    <div class="container">
        <table>
            {% if content.status == 'OK' %}
                {% for row in content.data %}
                    <tr>

                        {% for column in row %}
                            <td class="cell-{{ loop.parent.loop.index - 1 }}{{ loop.index - 1 }}">
                                {% if column == '' %}
                                    <a href="{{ app.request.getBaseURL() }}/user-move/{{ loop.parent.loop.index - 1 }}/{{ loop.index - 1 }}"
                                       class="cell-{{ loop.parent.loop.index - 1 }}{{ loop.index - 1 }}">&nbsp;</a>
                                {% else %}
                                    <span class="cell-empty">{{ column }}</span>
                                {% endif %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            {% endif %}
        </table>
    </div>

{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }
        .container {
            background-color: #5bc0de;
            margin-left: auto;
            margin-right: auto;
            margin-top: 60px;
            width: 600px;
            padding: 40px;
        }
        table {
            background-color: #5bc0de;
            border: none;
            border-collapse: collapse;
            margin-left: auto;
            margin-right: auto;
            padding: 50px;
            width: 450px;
        }
        table td {
            border: 3px solid #6c6159;
            border-collapse: collapse;
            box-sizing: border-box;
            color: #FFFFFF;
            font-weight: 600;
            height: 150px;
            width: 150px;
            min-width: 150px;
            text-align: center;
            vertical-align: middle;
        }
        table tr:first-of-type td {
            border-top: none;
        }
        table tr:last-of-type td {
            border-bottom: none;
        }
        table tr td.cell-00,
        table tr td.cell-10,
        table tr td.cell-20 {
            border-left: none;
        }
        table tr td.cell-02,
        table tr td.cell-12,
        table tr td.cell-22 {
            border-right: none;
        }
        table td a {
            color: #FFFFFF;
            display: block;
            font-size: 4em;
            margin-right: auto;
            margin-left: auto;
            padding: 20px;
            text-align: center;
            text-decoration: none;
            width: 150px;
            min-width: 150px;
        }
        table td span.cell-empty {
            color: #FFFFFF;
            font-size: 4em;
            width: 150px;
            min-width: 150px;
        }
    </style>
{% endblock %}
